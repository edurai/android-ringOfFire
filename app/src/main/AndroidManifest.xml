<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edray.ringoffire">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ringoffiredastrinkspiel"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".GameOverActivity" />
        <activity android:name=".OptionsActivity" />
        <activity android:name=".RulesActivity" />
        <activity android:name=".GameActivity2" />
        <activity android:name=".ViewRulesActivity"></activity>
    </application>

</manifest>
